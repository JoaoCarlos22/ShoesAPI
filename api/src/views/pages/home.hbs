<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Tamanho</th>
      <th>Cor</th>
      <th>Marca</th>
      <th>Preço</th>
      <th>Quantidade</th>
      <th>Categoria</th>
    </tr>
  </thead>
  <tbody>
    {{#each shoes}}
      <tr>
        <td>{{this.name}}</td>
        <td>{{this.size}}</td>
        <td>{{this.color}}</td>
        <td>{{this.brand}}</td>
        <td>R$ {{this.price}}</td>
        <td>{{this.quantity}}</td>
        <td>{{this.category.name}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>